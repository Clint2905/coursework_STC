int daysOut = 0;
int hoursOut = 0;
int minutesOut = 0;
int secondsOut = 0;
int minutesToSeconds = 60;
int hoursToSeconds = 3600;
int SecondsToHours = 60;


bool calculatorRunning;

char timerChoice = ' ';

void Quitcalculator() {

}



